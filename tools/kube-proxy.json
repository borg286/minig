{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "k8s-proxy",
    "namespace": "kube-system"
  },
  "spec": {
    "hostNetwork": true,
    "containers": [
      {
        "name": "kube-proxy",
        "image": "gcr.io/google_containers/hyperkube-amd64:v1.6.8",
        "command": [
          "/hyperkube",
          "proxy",
          "--master=http://127.0.0.1:8080",
          "--v=2",
          "--resource-container=\"\""
        ],
        "securityContext": {
          "privileged": true
        }
      }
    ]
  }
}
